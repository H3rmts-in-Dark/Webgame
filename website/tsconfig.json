{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"resolveJsonModule": true,
		"baseUrl": ".",
		"allowJs": true,
		"checkJs": true
	},
	"include": ["ts/**/*.d.ts", "ts/**/*.ts", "ts/**/*.js", "ts/**/*.svelte"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
